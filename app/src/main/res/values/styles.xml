<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:shadowColor">@color/color_shadow_text</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="style_letter_button" parent="textViewStyle">
        <item name="android:background">@drawable/letter_button</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">-1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="style_letter_answer" parent="textViewStyle">
        <item name="android:background">@drawable/btn_letter_empty</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">-0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

</resources>
