<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="style_letter_button">
        <item name="android:background">@drawable/letter_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="style_letter_answer">
        <item name="android:background">@drawable/achtergrond_letter_woord</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
