<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="style_letter_button">
        <item name="android:background">@drawable/letter_button</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="style_letter_answer">
        <item name="android:background">@drawable/btn_letter_empty</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

</resources>
