<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.geckoapps.raaddeplaat.LevelActivity">


    <RelativeLayout
        android:id="@+id/frame_container"
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/level_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <FrameLayout
                android:layout_width="@dimen/level_image_size"
                android:layout_height="@dimen/level_image_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/level_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/level_block_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/frame" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/frame_bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-25dp"/>


        <com.geckoapps.raaddeplaat.model.Toolbar
            android:id="@+id/level_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"></com.geckoapps.raaddeplaat.model.Toolbar>
       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:src="@drawable/frame_top" />-->


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/level_answer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shuffle"
                android:text="shuffle"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_axe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/axe" />

            <Button
                android:id="@+id/button_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share"
                android:text="share"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_container"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rij1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonWoord0"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord1"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord2"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord3"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord4"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord5"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord6"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord7"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord8"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord9"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rij2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonWoord10"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord11"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord12"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord13"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord14"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord15"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord16"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord17"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord18"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />

                <Button
                    android:id="@+id/buttonWoord19"
                    style="@style/style_letter_answer"
                    android:layout_width="@dimen/level_button_answer_width"
                    android:layout_height="@dimen/level_button_answer_height" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonLetter0"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter1"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter2"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter3"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter4"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter5"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter6"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter7"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height"
                    android:padding="0dp" />

                <Button
                    android:id="@+id/buttonLetterHint"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height"
                    android:background="@drawable/hint_button"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonLetter9"
                    style="@style/style_letter_button"
                    android:layout_width="@dimen/level_button_letter_width"
                    android:layout_height="@dimen/level_button_letter_height" />

                <Button
                    android:id="@+id/buttonLetter10"
                    style="@style/style_letter_button"
